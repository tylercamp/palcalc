<Window x:Class="PalCalc.UI.View.LoadingSaveFileModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalCalc.UI.View"
        mc:Ignorable="d"
        xmlns:itl="clr-namespace:PalCalc.UI.Localization"
        Title="{itl:LocalizedText LC_POPUP_TITLE_LOADING_SAVE_FILE}"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        SizeToContent="WidthAndHeight"
        >
    <TextBlock Text="{Binding}" Margin="5,5,5,5" />
</Window>
